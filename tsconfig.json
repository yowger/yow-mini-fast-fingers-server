{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2019",
        "allowJs": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strict": true,
        "strictFunctionTypes": false,
        "noImplicitThis": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [".templates"]
}
